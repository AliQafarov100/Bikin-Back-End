@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="main-section">
        <div class="container">
            <div class="row">
                <div class="main">
                    <div class="description text-center">
                        <h1>@Model.Page.Title</h1>
                        <p>@Model.Page.SubTitle</p>
                        <a href="" class="btn btn-primary mt-4">Get Started</a>
                        <div class="image">
                            <img src="/assets/Image/Main Section/@Model.Page.Image" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="little-card">
        <div class="container">
            <div class="row">
                <div class="about col-lg-5 text-light">
                    <h2 class="">Voluptatem dignissimos provident quasi</h2>
                    <p class="">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Duis aute irure dolor in reprehenderit</p>
                    <a href="" class="btn">About us</a>
                </div>
                <div class="cards col-lg-7">
                    <div class="row">
                        @foreach (AboutCards cards in Model.AboutCards)
                        {
                            <div class="col-lg-6 text-light mb-3">
                                <i class="@cards.Icon"></i>
                                <p>@cards.Title</p>
                                <span>@cards.Description</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="carousel-section" class="mt-3">
        <div class="container">
            <div class="row align-items-center">
                @foreach (Sponsor sponsor in Model.Sponsors)
                {
                    <div class="companys col-lg-2 col-md-4 col-sm-4 col-4">
                        <img src="/assets/Image/Company/@sponsor.Image" alt="">
                    </div>
                }
            </div>
        </div>
    </section>
    <section id="service-card" class="mt-4 py-5">
        <div class="container">
            <h3 class="text-center text-light">@layoutservice.GetDatas().Result.FirstOrDefault(s => s.Key == "ServiceLogo").Value</h3>
            <p class="text-center text-light">@layoutservice.GetDatas().Result.FirstOrDefault(s => s.Key == "ServiceSubTitle").Value</p>
            <div class="services">
                <div class="row">
                    @foreach (ServiceCard card in Model.Cards)
                    {

                        <div class="col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="punkt">
                                <i class="@card.Icon"></i><br>
                                <strong class="mt-5" style="color: #2d405f;">@card.Title</strong><br>
                                <span class="mt-3">@card.Description</span>
                            </div>

                        </div>
                    }
                </div>
            </div>

        </div>
    </section>
    <section id="contacts" class="py-5">
        <div class="container">
            <h3 class="text-center">@layoutservice.GetDatas().Result.FirstOrDefault(s => s.Key == "ContactTitle").Value</h3>
            <p class="text-center">@layoutservice.GetDatas().Result.FirstOrDefault(s => s.Key == "ContactSuTitle").Value</p>
            <div class="row justify-content-between">
                <div class="locations col-lg-5">
                    <div class="row">
                        <div class="address location text-center col-lg-12">
                            <i class="fa-solid fa-location-dot"></i><br>
                            <strong>Our Address</strong>
                            <p>A108 Adam Street, New York, NY 535022</p>
                        </div>
                        <div class="row justify-content-between col-lg-12">
                            <div class="email location text-center col-lg-5 col-md-6 col-sm-6">
                                <i class="fa-solid fa-envelope"></i><br>
                                <strong>Email Us</strong>
                                <p>
                                    info@example.com
                                    contact@example.com
                                </p>
                            </div>
                            <div class="call location text-center col-lg-6 col-md-6 col-sm-6">
                                <i class="fa-solid fa-phone"></i><br>
                                <strong>Call Us</strong>
                                <p>
                                    +1 5589 55488 55 <br>
                                    +1 6678 254445 41
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="message col-lg-6 mt-4 col-md-12">
                    <form action="">
                        <div class="input d-flex justify-content-between">
                            <input type="text" placeholder="Email"> <br>
                            <input type="text" class="" placeholder="Phone">
                        </div>
                        <input type="text" placeholder="Subject" class="sub"> <br>
                        <textarea name="" id="" cols="30" rows="10"></textarea>
                    </form>
                    <button class="btn btn-success">Send Messsage</button>
                </div>
            </div>
        </div>
    </section>
</main>
